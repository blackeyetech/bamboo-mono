{
  "version": "1.0.0",
  "name": "@bs-core/svelte-kit",
  "description": "The Bamboo Shell SvelteKit Adapter",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/svelte-kit.js",
      "types": "./dist/svelte-kit.d.ts"
    }
  },
  "files": [
    "dist/svelte-kit.js",
    "dist/svelte-kit.d.ts",
    "dist/svelte-kit.ms.map"
  ],
  "types": "./dist/svelte-kit.d.ts",
  "scripts": {
    "build-dev": "tsc",
    "build-prod": "pnpm run clean && tsc",
    "format-ts": "prettier --write 'src/**/*.ts'",
    "format-js": "prettier --write 'dist/**/*.{js,ts}'",
    "format-misc": "prettier --write '**/*.{json,md,yaml}'",
    "install-bin": "pnpm install -g $(pnpm pack . | tail -1)",
    "test": "echo \"No tests\" && exit 0",
    "clean": "rm -rf ./dist ./out",
    "prepare": "pnpm run clean && pnpm run build-prod",
    "prepublishOnly": "pnpm test"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "keywords": [
    "Bamboo",
    "Shell",
    "Framework",
    "SvelteKit",
    "selve-kit-adapter"
  ],
  "author": "Black Eye Technology",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blackeyetech/bamboo-mono.git"
  },
  "bugs": {
    "url": "https://github.com/blackeyetech/bamboo-mono/issues"
  },
  "homepage": "https://github.com/blackeyetech/bamboo-mono#readme",
  "peerDependencies": {
    "@bs-core/shell": "workspace:^",
    "@sveltejs/kit": "^2.36.1"
  },
  "private": false,
  "devDependencies": {
    "@bs-core/shell": "workspace:^",
    "@sveltejs/kit": "^2.37.1",
    "vite": "^7.1.5"
  }
}
