{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    /* Projects */
    "tsBuildInfoFile": "./out/tsconfig.tsbuildinfo" /* Specify the path to .tsbuildinfo incremental compilation file. */,

    /* Modules */
    "rootDir": "./src" /* Specify the root folder within your source files. */,
    "outDir": "./out" /* Specify an output folder for all emitted files. */,
    "declarationDir": "./out/types" /* Specify the output directory for generated declaration files. */,

    // Skip typechecking libraries and .d.ts files
    "skipLibCheck": true
  },

  "include": ["src/**/*.ts"]
}
